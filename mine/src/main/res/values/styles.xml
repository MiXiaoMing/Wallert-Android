<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- activity根布局 -->
    <style name="mine_activity_root_bg">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- 标题栏 -->
    <style name="mine_title_bar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="mine_fragment_vertical_divider">
        <item name="android:layout_width">1px</item>
        <item name="android:layout_height">45px</item>
        <item name="android:background">@color/mine_fragment_vertical_divider</item>
    </style>

    <!-- 水平分割线 -->
    <style name="mine_fragment_horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/mine_fragment_item_divider</item>
    </style>

    <style name="mine_fragment_item_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">15px</item>
        <item name="android:layout_marginLeft">17px</item>
        <item name="android:layout_marginTop">22px</item>
        <item name="android:layout_marginBottom">22px</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="mine_fragment_item_image">
        <item name="android:layout_width">7px</item>
        <item name="android:layout_height">12px</item>
        <item name="android:src">@drawable/mine_fragment_right_icon</item>
        <item name="android:layout_marginRight">17px</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:contentDescription">@string/image_view_content_description</item>
    </style>

    <!-- 设置支付密码 -->
    <style name="mine_set_password_item_cell">
        <item name="android:layout_width">47px</item>
        <item name="android:layout_height">47px</item>
        <item name="android:gravity">center</item>
        <item name="android:inputType">numberPassword</item>
        <item name="android:textSize">40px</item>
    </style>

    <!-- item cell -->
    <style name="mine_set_pay_password_verification_item_cell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54px</item>
        <item name="android:background">#FFFFFF</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/mine_horizontal_dimen</item>
        <item name="android:paddingRight">@dimen/mine_horizontal_dimen</item>
        <item name="android:orientation">horizontal</item>
    </style>

    <style name="mine_set_pay_password_verification_item_left_text">
        <item name="android:layout_width">106px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15px</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="mine_set_pay_password_verification_item_left_text_gray">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14px</item>
        <item name="android:textColor">#999999</item>
        <item name="android:background">@null</item>
    </style>

    <style name="mine_set_pay_password_verification_item_blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14px</item>
        <item name="android:textColor">#4A84F4</item>
    </style>

    <!-- 水平分割线 -->
    <style name="mine_set_pay_password_horizontal_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.6dp</item>
        <item name="android:background">#E7E7E7</item>
    </style>

    <!-- 页面底部蓝色按钮 -->
    <style name="mine_bottom_blue_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">47px</item>
        <item name="android:layout_marginBottom">30px</item>
        <item name="android:layout_marginLeft">@dimen/mine_horizontal_dimen</item>
        <item name="android:layout_marginRight">@dimen/mine_horizontal_dimen</item>
        <item name="android:background">@drawable/mine_set_pay_password_blue_button_bg</item>
        <item name="android:text">@string/settings</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">17px</item>
    </style>

    <!-- 竖直，权重1 -->
    <style name="mine_view_vertical_weight_1">
        <item name="android:layout_width">1dp</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 国家选择 -->
    <style name="mine_select_country_item_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15px</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginLeft">17px</item>
        <item name="android:paddingTop">20px</item>
        <item name="android:paddingBottom">20px</item>
    </style>

    <!-- 基本实名认证 -->
    <style name="mine_identification_upload_id_card_front">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14px</item>
        <item name="android:textColor">#000000</item>
        <item name="android:layout_marginTop">20px</item>
        <item name="android:layout_marginLeft">@dimen/mine_horizontal_dimen</item>
        <item name="android:layout_marginRight">@dimen/mine_horizontal_dimen</item>
    </style>

    <style name="mine_identification_upload_id_card_select_hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12px</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_marginLeft">@dimen/mine_horizontal_dimen</item>
        <item name="android:layout_marginRight">@dimen/mine_horizontal_dimen</item>
    </style>

    <style name="mine_identification_upload_id_card_cell">
        <item name="android:layout_width">339px</item>
        <item name="android:layout_height">165px</item>
        <item name="android:background">@drawable/mine_upload_id_card_cell_bg</item>
        <item name="android:layout_marginTop">15px</item>
        <item name="android:layout_marginLeft">@dimen/mine_horizontal_dimen</item>
        <item name="android:layout_marginRight">@dimen/mine_horizontal_dimen</item>
    </style>

    <style name="mine_identification_upload_id_card_cell_image">
        <item name="android:layout_width">25px</item>
        <item name="android:layout_height">25px</item>
        <item name="android:src">@drawable/mine_add</item>
        <item name="android:contentDescription">@string/image_view_content_description</item>
        <item name="android:layout_marginLeft">@dimen/mine_horizontal_dimen</item>
        <item name="android:layout_marginRight">@dimen/mine_horizontal_dimen</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="mine_upload_id_card_result_left_black_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">15px</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="mine_upload_id_card_result_right_gray_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15px</item>
        <item name="android:textColor">#999999</item>
    </style>

    <!-- 国外基本实名认证 -->
    <style name="mine_abroad_id_card_verify_item_cell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">54px</item>
        <item name="android:paddingLeft">16px</item>
        <item name="android:paddingRight">16px</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">@color/white</item>
    </style>

    <style name="mine_abroad_id_card_verify_left_black_text">
        <item name="android:layout_width">84px</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15px</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="mine_abroad_id_card_verify_edit_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">7px</item>
        <item name="android:paddingBottom">7px</item>
        <item name="android:background">@null</item>
        <item name="android:textColorHint">#999999</item>
        <item name="android:textSize">13px</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="mine_abroad_id_card_verify_right_gray_text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">right</item>
        <item name="android:textSize">14px</item>
        <item name="android:textColor">#999999</item>
    </style>

    <style name="mine_abroad_id_card_verify_hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">15px</item>
        <item name="android:textSize">13px</item>
        <item name="android:textColor">#999999</item>
        <item name="android:layout_marginLeft">@dimen/mine_horizontal_dimen</item>
        <item name="android:layout_marginRight">@dimen/mine_horizontal_dimen</item>
    </style>

    <!-- 国外高级信息认证 -->
    <style name="mine_identify_abroad_high_level_process_item_cell">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">90px</item>
        <item name="android:layout_weight">1</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">vertical</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="mine_identify_abroad_high_level_process_item_horizontal_cell">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <!-- 进度线，灰色、蓝色 -->
    <style name="mine_identify_abroad_high_level_process_horizontal_line">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_weight">1</item>
    </style>

    <!-- 进度圆圈，灰色、蓝色，使用dp，和drawable一样 -->
    <style name="mine_identify_abroad_high_level_process_circle">
        <item name="android:layout_width">14dp</item>
        <item name="android:layout_height">14dp</item>
    </style>

    <style name="mine_identify_abroad_high_level_process_text">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">14px</item>
        <item name="android:layout_marginTop">12px</item>
    </style>

    <!-- 海外，高级-证件信息 -->
    <style name="mine_abroad_card_info_upload_hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12px</item>
        <item name="android:textColor">#999999</item>
        <item name="android:lineSpacingExtra">20dp</item>
        <item name="android:layout_marginTop">15px</item>
        <item name="android:layout_marginLeft">@dimen/mine_horizontal_dimen</item>
        <item name="android:layout_marginRight">@dimen/mine_horizontal_dimen</item>
    </style>

    <!-- 上一步 -->
    <style name="mine_back_step">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/next_and_back_step_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/mine_back_step_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">#666666</item>
    </style>

    <!-- 下一步 -->
    <style name="mine_next_step">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">@dimen/next_and_back_step_button_height</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/mine_next_step_bg</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mine_abroad_address_prove_upload_hint">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">12px</item>
        <item name="android:textColor">#999999</item>
        <item name="android:lineSpacingExtra">15dp</item>
        <item name="android:layout_marginLeft">@dimen/mine_horizontal_dimen</item>
        <item name="android:layout_marginRight">@dimen/mine_horizontal_dimen</item>
        <item name="android:layout_marginTop">15px</item>
    </style>

</resources>